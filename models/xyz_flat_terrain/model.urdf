<robot name="xyz_flat_terrain">

  <link name="world"/>


  <joint name="xyz_joint" type="planar">
    <origin xyz="0.0 0 1." rpy="0 0 0" />
    <parent link="world"/>
    <child link="base_link" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- the model -->
  <link name="base_link">
    <inertial>
      <mass value="10" />
      <origin xyz="0 0 1." />
      <inertia ixx="5" ixy="0.0" ixz="0.0"
        iyy="5" iyz="0.0"
        izz="10" /> <!--Ixx = 1/12/m*(y^2+z^2)-->
    </inertial>
    <visual>
      <origin xyz="0 0 1." />
      <geometry>
        <box size="10 10 0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 1." />
      <geometry>
        <box size="10 10 0.1" />
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.6</mu>
            <mu2>0.6</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

<gazebo reference="base_link">
    <material>simple_terrain</material>
</gazebo>


</robot>
